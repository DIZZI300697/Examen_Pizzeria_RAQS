            android:backgroundTint="#FFA726"
            android:text="-"></Button>

        <Button
            android:id="@+id/resta"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="-70dp"
            android:layout_marginTop="170dp"
            android:backgroundTint="#FFA726"
            android:text="-"></Button>

        <TextView
            android:id="@+id/cantidad1"
            android:layout_width="50dp"
